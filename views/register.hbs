<body style="background-color: #f5f5f5">
    <!-- Section: Design Block -->
    <section class="">
        <!-- Jumbotron -->
        <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
            <div class="container">
                <div class="row gx-lg-5 align-items-center">
                    <div class="col-lg-6 mb-5 mb-lg-0">
                        <h1 class="my-5 display-3 fw-bold ls-tight">
                            The Transformative<br />
                            <span class="text-primary">Solution</span>
                        </h1>
                        <p style="color: hsl(217, 10%, 50.8%)">
                            This app has the potential to empower rural communities, bridge the educational gap, and foster growth and development in rural areas.
                        </p>
                    </div>
                    <div class="col-lg-6 mb-5 mb-lg-0">
                        <div class="card">
                            <div class="card-body py-5 px-md-5">
                                <form id="registration-form" action="/auth/register" method="post">
                                    <!-- 2 column grid layout with text inputs for the first and last names -->
                                    {{#if msg}}
                                    <p class="{{msg_type}} alert " role="alert">{{msg}}</p>
                                    {{/if}}
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="text" id="form3Example1" name="name" class="form-control" required/>
                                                <label class="form-label" for="form3Example1">Name</label>
                                            </div>
                                        </div>
                                        <!-- Email input -->
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="email" id="form3Example3" name="email" class="form-control" required/>
                                                <label class="form-label" for="form3Example3">Email address</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="text" id="form3Example21" name="eduqualf" class="form-control" required/>
                                                <label class="form-label" for="form3Example21">Educational Qualification</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="text" id="form3Example2" name="insname" class="form-control" required/>
                                                <label class="form-label" for="form3Example2">Institution Name</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <input type="text" id="form3Example24" name="inspincode" class="form-control" required/>
                                            <label class="form-label" for="form3Example24">Institution Pincode</label>
                                        </div>
                                    </div>
                                    <!-- Password input -->
                                    <div class="form-outline mb-4">
                                        <input type="password" id="form3Example4" name="password" class="form-control" required/>
                                        <label class="form-label" for="form3Example4">Password</label>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <input type="password" id="form3Example4" name="cpassword" class="form-control" required/>
                                        <label class="form-label" for="form3Example4">Confirm Password</label>
                                    </div>
                                    <!-- Checkbox -->
                                    <div class="form-check d-flex justify-content-center mb-4">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example33" checked required/>
                                        <label class="form-check-label" for="form2Example33">
                                            I agree to terms & condition and <a href="https://veclib.lavan.net.in/privacy.html" target="_blank">privacy policy</a>
                                        </label>
                                    </div>
                                    <!-- Submit button -->
                                    <button type="submit" class="btn btn-primary btn-block mb-4">
                                        Sign up
                                    </button>
                                    <!-- Register buttons -->
                                    <div class="text-center">
                                        or <a href="/">Back to Login</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Jumbotron -->
    </section>
    <!-- Section: Design Block -->

    <!-- Custom JavaScript -->
    <script>
        document.getElementById("registration-form").addEventListener("submit", function (event) {
            var emailInput = document.getElementById("form3Example3").value;
            var emailPattern = /^[a-zA-Z0-9._%+-]+@(gmail\.com|velammal\.edu\.in|yahoo\.com|outlook\.com)$/;

            if (!emailPattern.test(emailInput)) {
                event.preventDefault(); // Prevent form submission
                var errorMessage = document.createElement("p");
                errorMessage.classList.add("error-message", "alert", "alert-danger", "mt-2");
                errorMessage.textContent = "Please enter a valid email address (do not use any custom domain email addresses,you can use personal email address)";

                // Insert error message after the email input field
                var emailInputField = document.getElementById("form3Example3");
                emailInputField.parentNode.insertBefore(errorMessage, emailInputField.nextSibling);
            }
        });
    </script>
